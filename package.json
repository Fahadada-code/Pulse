{
  "name": "pulse-widget",
  "version": "1.0.0",
  "description": "Pulse - Lightweight YouTube Music Controller",
  "main": "electron/main.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder"
  },
  "build": {
    "appId": "com.pulse.widget",
    "productName": "Pulse",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": "nsis"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "files": [
      "electron/**/*",
      "assets/**/*",
      "package.json",
      ".env"
    ]
  },
  "keywords": [
    "youtube-music",
    "electron",
    "widget"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "electron": "^39.2.7",
    "electron-builder": "^26.4.0",
    "png-to-ico": "^3.0.1"
  },
  "dependencies": {
    "dotenv": "^17.2.3",
    "ws": "^8.16.0"
  }
}