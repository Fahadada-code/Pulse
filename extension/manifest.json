{
    "manifest_version": 3,
    "name": "Pulse Connector",
    "version": "1.0",
    "description": "Connects YouTube Music to the Pulse Desktop Widget",
    "permissions": [
        "scripting",
        "activeTab"
    ],
    "host_permissions": [
        "https://music.youtube.com/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "https://music.youtube.com/*"
            ],
            "js": [
                "content.js"
            ]
        }
    ]
}